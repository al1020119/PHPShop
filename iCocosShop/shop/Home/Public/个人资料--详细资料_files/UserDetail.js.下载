$("UserMap").html("编辑个人档案");
function selecteOption(select, val) {
    try {
        select.val(val);
    }
    catch (ex) { // fixed ie6 can not set the selected attribute
        setTimeout(function () {
            select.val(val);
        }, 1);
    }
}
